@{
    
}
<div class="accordion-body p-0">
    <ul class="list-group">
       
            @foreach (var item in Model)
            {
           
                <a asp-area="Customer" asp-controller="Shop" asp-action="ByCategory" asp-route-categoryId="@item.Id" class="list-group-item list-group-item-action @(ViewBag.CategoryId == item.Id ? "active" : "")">@item.Name</a>
            
            }
        
    </ul>
</div>