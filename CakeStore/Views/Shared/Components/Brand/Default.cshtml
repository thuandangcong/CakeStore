@{

}
<div class="accordion-body p-0">
    <ul class="list-group">
       
            @foreach (var item in Model)
            {
                <a asp-area="Customer" asp-controller="Shop" asp-action="ByBrand" asp-route-brandId="@item.Id" class="list-group-item list-group-item-action @(ViewBag.BrandId == item.Id ? "active" : "")">@item.Name</a>
            }
        
    </ul>
</div>      