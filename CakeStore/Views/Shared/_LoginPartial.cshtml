@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index"
       class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center">
            <i class="fas fa-gear"></i>           
        </a>
        <a id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
           class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center">
            <i class="fas fa-arrow-right-from-bracket"></i>
           
        </a>
}
else
{
        <a id="register" asp-area="Identity" asp-page="/Account/Register"
       class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center">
            <i class="fas fa-user-alt m-1 me-md-2"></i>
            <p class="d-none d-md-block mb-0">Register</p>
        </a>
        <a id="login" asp-area="Identity" asp-page="/Account/Login"
           class="me-1 border rounded py-1 px-3 nav-link d-flex align-items-center">
            <i class="fas fa-user-alt m-1 me-md-2"></i>
            <p class="d-none d-md-block mb-0">Login</p>
        </a>
}
