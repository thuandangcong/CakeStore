@{
    ViewData["Title"] = "Home Page";
}
<partial name="_ProductLayOutListPartial" />
@section Scripts {
    <script>
        function sortList() {
            var selectedPage = document.getElementById("sortOption").value;
            console.log(window.location.href);
            window.location.href = "?brandId=" + @ViewBag.BrandId + "&&orderBy=" + selectedPage + "&&page=" + @Model.PageNumber;
        }
    </script>
}